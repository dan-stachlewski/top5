{% extends 'layout.twig' %}

{% block content %}

    <div class="row">
        <h2>All users</h2>
    </div>

    {% if customers %}
        <div class="row">

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>UserName</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    {% for customer in customers %}
                        <tr>
                            <td>{{ customer.username }}</td>
                            <td>{{ customer.email }}</td>
                            <td><a class="btn btn-info" href="{{ path_for('customers-show', {id: customer.customerid}) }}">Show</a>
                                <a class="btn btn-success" href="{{ path_for('customers-edit', {id: customer.customerid}) }}">Edit</a>
                        </tr>
                    {% endfor %}

                </tbody>
            </table>

        </div>
    {% else %}
        <div class="row">
            <h5>No customers found</h5>
        </div>
    {% endif %}    
{% endblock %}