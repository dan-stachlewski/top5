{% extends 'layout.twig' %}

{% block content %}

    <div class="row">
        <h2>User Details</h2>
    </div>

    <div class="row">
      
            <img src="{{ base_url()}}/images/anonymous.png"
       
       
    </div>



    <div class="row">

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Field</th>
                    <th>Value</th>

                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>User Name:</td>
                    <td>{{ user.user_name }}</td>
                </tr>
                <tr>
                    <td>Full Name:</td>
                    <td>{{ user.full_name }}</td>
                </tr>
                 <tr>
                    <td>Email:</td>
                    <td>{{ user.email }}</td>
                </tr>
                 <tr>
                    <td>User Permissions:</td>
                    <td>{{ user.role }}</td>
                </tr>

            </tbody>
        </table>
    </div>

    <a class="btn btn-success" href="{{ path_for('admin-users-all') }}">Browse All Users</a>

{% endblock %}
