{% extends 'layout.twig' %}

{% block content %}

    <div class="row">
        <h2>Customer Details</h2>
    </div>

    <div class="row">
      
            <img src="{{ base_url()}}/images/anonymous.png"
       
       
    </div>



    <div class="row">

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Field</th>
                    <th>Value</th>

                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>User Name:</td>
                    <td>{{ customer.username }}</td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td>{{ customer.email }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a class="btn btn-success" href="{{ path_for('places-all') }}">Browse All Places</a>

{% endblock %}
