{% extends 'layout.twig' %}

{% block content %}

    <div class="row">
        <h2>Customer Details</h2>
    </div>

    <div class="row">
      
            <img src="{{ base_url()}}/images/anonymous.png"
       
       
    </div>



    <div class="row">

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Field Name:</th>
                    <th>Customer Details:</th>

                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>User Name:</td>
                    <td>{{ customer.username }}</td>
                </tr>
                <tr>
                    <td>Full Name:</td>
                    <td>{{ customer.full_name }}</td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td>{{ customer.email }}</td>
                </tr>
            </tbody>
        </table>

    <a class="btn btn-warning" href="{{ path_for('customers-edit', {'id':customer.customer_id}) }}">Edit</a>{#{{ path_for('customers-edit', {id: customer.customerid}) }}#}
    <a class="btn btn-success" href="{{ path_for('places-all') }}">Browse All Places</a>
    </div>
{% endblock %}
